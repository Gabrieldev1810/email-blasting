# Beacon Blast Email Marketing Platform - Production Environment Variables
# Copy this file to .env and configure for your production environment

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secure-secret-key-change-this-in-production
DEBUG=False

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/beacon_blast_prod

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=86400

# Email Configuration  
SMTP_SERVER=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-email@yourcompany.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True

# Application URLs
BASE_URL=https://your-production-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# Security Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# File Upload Configuration
MAX_UPLOAD_SIZE=5242880
UPLOAD_FOLDER=uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=True

# Rate Limiting (requests per minute)
RATE_LIMIT_AUTH=10
RATE_LIMIT_API=60
RATE_LIMIT_EMAIL=5

# Email Campaign Limits
MAX_CONTACTS_PER_CAMPAIGN=10000
MAX_CAMPAIGNS_PER_HOUR=5

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# Session Configuration
PERMANENT_SESSION_LIFETIME=3600

# Security Configuration
MAX_CONTENT_LENGTH=16777216
SECURITY_HEADERS=True

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
REDIS_URL=redis://localhost:6379/0

# Email Settings
MAX_EMAIL_RECIPIENTS=1000
EMAIL_RATE_LIMIT=50

# File Upload Settings
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=csv,xlsx,txt

# API Configuration
API_RATE_LIMIT=100
AUTH_RATE_LIMIT=10